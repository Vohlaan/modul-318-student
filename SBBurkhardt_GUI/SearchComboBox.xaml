             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SBBurkhardt_GUI"
             mc:Ignorable="d" Height="20" Width="205.238">
    <Grid HorizontalAlignment="Left" Width="206" Height="20" VerticalAlignment="Top">
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <ComboBox x:Name="cboxSearch" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150" IsEditable="True" SelectionChanged="cboxSearch_SelectionChanged" Height="20"/>
